<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPaymentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Payment"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/etSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Source Address"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destination Address"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <Spinner
            android:id="@+id/spinnerVehicleSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/select_vehicle_prompt"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate Toll"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/tvTollAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toll Amount: â‚¹0"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnProceedPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed to Payment"/>

    </LinearLayout>
</ScrollView>
